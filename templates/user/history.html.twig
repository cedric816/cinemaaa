{% extends "base.html.twig" %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a class="navbar-brand" href={{ path('home_index') }}>TCHI TCHA</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('user_index') }}>Les films</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('user_cart') }}>Mon panier</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href={{ path('cart_history') }}>Historique</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('app_logout') }}>Deconnexion</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-5">
		<h5>Mon historique</h5>
	</div>

	<div class="container mt-5">
		<ul class="list-group">
			{% for cart in carts  %}
				{% if cart.isActive %}
					{% else %}
						<li class="list-group-item">
							<strong>Réservation n°{{cart.id}} -
								<span>Statut:
									{% if cart.isActive %}En cours -
										{% else %}Validé
									{% endif %}
								</span>
							</strong>
							{% if cart.films|length %}
								<p>⛔ Il reste des films à rendre</p>
								<div class="col-md-6 d-flex">
									<a class="btn btn-primary" href={{ path('history_detail', {'id': cart.id} ) }}>détail</a>
								</div>
							{% else %}
								<p>☑️ Tous les films ont été rendus</p>
							{% endif %}
						</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>


{% endblock %}

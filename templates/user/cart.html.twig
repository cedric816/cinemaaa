{% extends "base.html.twig" %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a class="navbar-brand" href={{ path('home_index') }}>TCHI TCHA</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('user_index') }}>ðŸ“€Les films</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href={{ path('user_cart') }}>ðŸ›’Mon panier</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('cart_history') }}>ðŸ“’Mes emprunts</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href={{ path('app_logout') }}>Deconnexion</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-5">
		<h5>Mon panier</h5>
	</div>
	<div class="container mt-5">
		<ul class="list-group">
			{% for film in films %}
				<li class="list-group-item">
					<div class="d-flex justify-content-between">
						<img src={{film.poster}} alt="affiche du film" height="80px">
						<h5>{{film.title}}</h5>
						<p>{{film.year}}
							-
							{{film.director}}</p>
						<form method="post" action="{{ path('film_delete', {'id': film.id}) }}" onsubmit="return confirm('Etes-ous sÃ»r de vouloir retirer {{film.title}} de votre panier?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.id) }}">
							<button type="submit" class="btn-close" aria-label="Close"></button>
						</form>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
	{% if cart.getFilms|length %}
		<div class="container mt-2 d-flex justify-content-end">
			<a class="btn btn-primary" href={{ path('cart_validation') }}>Valider mon panier</a>
		</div>
	{% endif %}
{% endblock %}
